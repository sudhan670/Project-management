<% content_for :title, "Projects" %>
<div class="card">
   <div class="card-header">
      <div class="card-title d-flex justify-content-between align-items-center mb-3">
        <span><h1>Projects Management App</h1></span>
        <%= link_to "New Project", new_project_path, class: 'btn btn-primary' %>
      </div>
   </div>
   <div class="card-body">
    <div id="projects" class="list-group">
      <% @projects.each do |project| %>
        <div class="list-group-item mb-3">
          <%= render project %>
          <p class="mt-2">
            <%= link_to "Show", project, class: 'btn btn-outline-info btn-sm' %>
            <%= link_to "Edit", edit_project_path(project), class: 'btn btn-success btn-sm' %>
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>

  
